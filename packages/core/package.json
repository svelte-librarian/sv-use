{
	"name": "@sv-use/core",
	"version": "0.44.0",
	"license": "MIT",
	"description": "A collection of Svelte 5 utilities.",
	"main": "./dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/svelte-librarian/sv-use.git"
	},
	"keywords": [
		"svelte",
		"utilities"
	],
	"author": "Sajidur Rahman",
	"bugs": {
		"url": "https://github.com/svelte-librarian/sv-use/issues"
	},
	"homepage": "https://github.com/svelte-librarian/sv-use#readme",
	"scripts": {
		"build": "svelte-package",
		"build:watch": "npm run build && nodemon -e js,ts -w src",
		"package": "svelte-kit sync && npm run build && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"coverage": "vitest run --coverage"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.4",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@vitest/coverage-v8": "^2.1.8",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"svelte": "^5.0.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vitest": "^2.1.8"
	}
}
